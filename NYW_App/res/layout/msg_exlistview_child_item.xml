<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView 
      android:layout_width="45dip"
      android:layout_height="45dip"
      android:background="#00000000"
      android:layout_marginLeft="5dip"
      android:layout_centerVertical="true"
      android:id="@+id/msg_listview_item_image"
      android:scaleType="fitXY"
      android:layout_marginTop="15dip"
      android:layout_marginBottom="15dip"
      android:src="@drawable/no_image"
    />

    <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_marginLeft="5dip"
       android:layout_toRightOf="@+id/msg_listview_item_image" >

      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/menu_msg_title_size"
        android:textColor="@color/menu_msg_title_color"
        android:layout_marginLeft="5dip"
        android:id="@+id/msg_listview_item_title"
        android:singleLine="true"
        android:maxEms="10"
        android:ellipsize="end"
        android:text="打车费 家到单位"
       />
      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/menu_msg_title_size"
        android:textColor="@color/menu_msg_conent_color"
        android:layout_marginLeft="5dip"
        android:id="@+id/msg_listview_item_date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:text="2015/05/21"
       />

	<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/menu_msg_conent_size"
    android:textColor="@color/menu_msg_conent_color"
    android:layout_marginLeft="5dip"
    android:id="@+id/msg_listview_item_content"
    android:layout_marginTop="3dip"
    android:layout_below="@+id/msg_listview_item_title"
     android:singleLine="true"
    android:maxEms="14"
    android:ellipsize="end"
    android:text="金额:  1111111111111.00"
    />
	<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/menu_msg_conent_size"
    android:textColor="@color/menu_msg_conent_color"
    android:layout_marginRight="10dip"
    android:id="@+id/msg_listview_item_status"
    android:layout_marginTop="3dip"
    android:layout_below="@+id/msg_listview_item_title"
    android:layout_alignParentRight="true"
    android:text="未审批"
	
    />
</RelativeLayout>   
</RelativeLayout>
